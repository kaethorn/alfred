FROM gradle:5.5-jdk11 as builder

# Install Chrome
RUN apt-get update && apt-get install -y --no-install-recommends \
	gnupg apt-transport-https \
	&& curl -sSL https://dl.google.com/linux/linux_signing_key.pub | apt-key add - \
	&& echo 'deb https://dl.google.com/linux/chrome/deb/ stable main' > /etc/apt/sources.list.d/google-chrome.list \
	&& apt-get update && apt-get install -y --no-install-recommends \
	google-chrome-stable fontconfig fonts-ipafont-gothic fonts-freefont-ttf \
	&& apt-get purge --auto-remove -y gnupg \
	&& rm -rf /var/lib/apt/lists/*

# Build, unit test & lint
WORKDIR /workspace/app
COPY settings.gradle build.gradle ./
COPY src src
COPY ui ui
COPY config config
RUN gradle -q build

# Start the application and run tests
COPY .boot-and-test.sh boot-and-test.sh
CMD ./boot-and-test.sh

