FROM gradle:5.5-jdk11
COPY settings.gradle build.gradle ./
RUN gradle dependencies > /dev/null

RUN apt-get update && \
    apt-get install -yq --no-install-recommends \
      fonts-freefont-ttf libxcursor1 libxdamage1 libxss1 libasound2 libx11-6 libxfixes3 libxi6 libxrandr2 \
      libxrender1 libx11-xcb1 libgtk-3-0 libnss3 libxtst6 && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

COPY src src
COPY ui ui
COPY config config

